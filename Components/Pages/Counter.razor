@page "/counter"
@using System.Globalization
@layout Layout.MainLayout
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<CustomButton OnClick='()=> Console.WriteLine("Custom Button is clicked")' class="btn btn-success">This is Custom Button</CustomButton>

<input type="text" @oninput="OnInputChange" />

@if (userInput is not null)
{
    <p>You entered: @userInput</p>
}
<div>
    <input type="text" @bind="InputText" @bind:event="oninput"/>
    <CustomButton OnClick="ClearInputText">clear</CustomButton>
</div>
<p>@InputText</p>

@code {
    private int currentCount = 0;
    [Parameter]
    [SupplyParameterFromQuery]
    public int? IncrementAmount { get; set; }

    private string? userInput;

    private void IncrementCount()
    {
        currentCount += IncrementAmount ?? 1;
    } 
    private async Task OnInputChange(ChangeEventArgs args)
    {
        userInput = args.Value?.ToString();
    }

    public string InputText { get; set;} = string.Empty;

    private void ClearInputText(){
        InputText = string.Empty;
    }
}
